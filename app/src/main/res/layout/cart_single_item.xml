<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="128dp"
            android:layout_below="@id/llCart"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:weightSum="8">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:src="@drawable/image01" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <TextView
                    android:id="@+id/txtTitleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/llDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTitleName"
                    android:layout_marginTop="3dp"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/txtItemPriceEach"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:text="Rs.600/each"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4169E1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtItemTotalQuantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="Qty:-3"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4169E1"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtItemTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llDetails"
                    android:layout_marginTop="5dp"
                    android:text="Total Price:-1800"

                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#4169E1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnRemove"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="#ff4500"
                    android:gravity="center"
                    android:text="Remove"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>